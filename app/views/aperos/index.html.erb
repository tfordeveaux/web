<h1>Liste des soirées à venir</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Description</th>
    <th>Date</th>
    <th>Heure</th>
    <th>Créateur</th>
    <th>Visibilité</th>
    <th>Categorie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @aperos.each do |apero| %>
  <tr>
    <td><%= apero.name %></td>
    <td><%= apero.content %></td>
    <td><%= apero.date %></td>
    <td><%= apero.hour %></td>
    <td><%= User.find(apero.user_id).email %></td>
    <td><%= apero.visibility %></td>
    <td><%= Category.find(apero.category_id).name %></td>
    <td><%= link_to 'Voir', apero %> </td>
    <td><% if can? :edit, apero %>
        <%= link_to 'Modifier', edit_apero_path(apero) %>
          <% end %>  </td>
    <td><% if can? :destroy, apero %>
        <%= link_to 'Détruire', apero, method: :delete, data: { confirm: 'Etes vous sûr?' } %>
          <% end %> 
    </td>
  </tr>
<% end %>
</table>

<br />

